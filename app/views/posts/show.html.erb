<div class="content_max_vh">

<div class="row">
  <div class="col s12 m2"></div>
  <div class="col s12 m8">
    <div class="card grey lighten-3">
      <div class="card-content">
        <p class="grey-text text-darken-3"><%= @post.body %></p>
      </div>
      <div class="card-action">
        <span class="grey-text text-darken-3"><%= @post.user.name %></span>
        <span class="grey-text text-darken-3"><%= @post.created_at %></span>

        <% if @post.user == current_user %>
        <%= link_to "編集", edit_post_path(@post.id), class: "grey-text text-darken-3" %>
        <%= link_to "削除", post_path(@post.id), method: :delete, class: "grey-text text-darken-3" %>
        <% end %>

      </div>
    </div>
  </div>
</div>
<div class="col s12 m2"></div>

</div>
