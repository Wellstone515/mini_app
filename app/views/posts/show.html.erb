<div class="content_max_vh">

<div class="row">
  <div class="col s12 m2"></div>
  <div class="col s12 m8">
    <div class="card grey lighten-3">
      <div class="card-content">
        <p class="grey-text text-darken-3"><%= @post.body %></p>
      </div>
      <div class="card-action">
        <span class="grey-text text-darken-3"><%= @post.user.name %></span>&nbsp;&nbsp;&nbsp;&nbsp;
        <span class="grey-text text-darken-3"><%= @post.created_at.strftime('%Y年%m月%d日 %H:%M') %></span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

        <% if @post.user == current_user %>
        <%= link_to "", edit_post_path(@post.id), class: "grey-text text-darken-3 fas fa-wrench fa-lg" %>
        <%= link_to "", post_path(@post.id), method: :delete, class: "grey-text text-darken-3 far fa-trash-alt fa-lg", data: { confirm: '削除しますか？' } %>
        <% end %>

      </div>
    </div>
  </div>
</div>
<div class="col s12 m2"></div>

</div>
