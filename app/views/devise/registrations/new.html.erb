<div class="log_in_background">


  <div class="row">
    <div class="col s4 m4 l4"></div>
    <div class="col s4 m4 l4">

      <h2 class="log_in_text">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%=f.label :name, class: "grey-text text-lighten-4" %></em><br />
        <%= f.text_field :name, autofocus: true, class: "grey lighten-4" %>
      </div>

      <div class="field">
        <%= f.label :email, class: "grey-text text-lighten-4" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "grey lighten-4" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "grey-text text-lighten-4" %>
        <% if @minimum_password_length %>
        <em class="grey-text text-lighten-4">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "grey lighten-4" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "grey-text text-lighten-4" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "grey lighten-4" %>
      </div>

        <div class="actions">
          <button class="btn waves-effect waves-light log_in_button" type="submit" name="action">
            <%= f.submit "Sign up" %>
            <i class="material-icons right">forward</i>
          </button>
        </div>

      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>

</div>
