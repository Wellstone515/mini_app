<div class="log_in_background">

  <div class="row">
    <div class="col s4 m4 l4"></div>
    <div class="col s4 m4 l4 log_in_input">

      <h2 class="log_in_text">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field input_text_field">
        <%= f.label :email, class: "grey-text text-lighten-4" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "grey lighten-4" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "grey-text text-lighten-4" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "grey lighten-4" %>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="field sign_in_up_text">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "log_in_text" %>
      </div>
      <% end %>

      <div class="actions">
        <button class="btn waves-effect waves-light log_in_button" type="submit" name="action">
          <%= f.submit "Log in" %>
          <i class="material-icons right">forward</i>
        </button>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>

</div>
